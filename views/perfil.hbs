{{> head_2}}

<body class="body">

        <!--mensajes tipo alert -->
        {{> mensajes}}

        <!-- HEADER -->
        {{> header_2}}


        <div class="container mb-5">


                <div class="text-dark p-5">
                        <ul style="overflow: hidden">
                                <li><p>miVariable {{miVariable}}</p></li>
                                <li><p>miOtraVariable {{miOtraVariable}}</p></li>
                                <li><p>user.token: {{user.token}}</p></li>
                                <li><p>usuario.token: {{usuario.token}}</p></li>
                                <li><p>token: {{token}}</p></li>
                                <li><p>req.session: {{req.session}}</p></li>
                                <li><p>user: {{user}}</p></li>
                                <li><p>user.nombre: {{user.nombre}}</p></li>
                                <li><p>user.correo: {{user.correo}}</p></li>
                                <li><p>user.rol: {{user.rol}}</p></li>
                                <li><p>user.estado: {{user.estado}}</p></li>

                        </ul>
                </div>



                <div class="p-3 mb-5">
                        <h2 class="text-center">Proyectos</h2>

                        <table class="table table-sm table-hover">
                                <thead>
                                        <tr>
                                                <th scope="col">Fecha</th>
                                                <th scope="col">Descripcion del proyecto</th>
                                                <th scope="col">Contacto</th>
                                        </tr>
                                </thead>
                                <tbody>

                                        {{#each array_de_proyectos}}
                                                 <tr>
                                                        <td>{{this.fecha}}</td>
                                                        <td>
                                                                <ul>
                                                                {{#each this.descripcion}}
                                                                <li>{{this}}</li>
                                                                {{/each}}
                                                                </ul>
                                                        </td>
                                                        <td>
                                                                <ul>
                                                                        <li>Nombre: {{this.nombre}}</li>
                                                                        <li>Correo: {{this.correo}}</li>
                                                                        <li>Telefono: {{this.telefono}}</li>
                                                                </ul>
                                                        </td>
                                                </tr>
                                        {{/each}}
                                        
                                </tbody>
                        </table>

                </div>



                <div class="tarjeta p-3">
                        <h2 class="text-center">Edita tus datos</h2>
                        <form>
                                <input type="hidden" id="token" name="token" value="{{user.token}}">
                                <input type="hidden" id="id" name="id" value="{{user._id}}">

                                <div class="form-group">
                                        <label for="editar-nombre" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="editar-nombre"
                                                value="{{user.nombre}}">
                                </div>

                                <div class="form-group">
                                        <label for="editar-apellido" class="form-label">Apellido</label>
                                        <input type="text" class="form-control" id="editar-apellido"
                                                value="{{user.apellido}}">
                                </div>

                                <div class="form-group">
                                        <label for="editar-ubicacion" class="form-label">Ubicacion</label>
                                        <input type="text" class="form-control" id="editar-ubicacion" required
                                                value="{{user.ubicacion}}">
                                </div>

                                <div class="">
                                        <button class="btn btn-primary" id="editar-datos">Guardar</button>
                                </div>

                        </form>
                </div>



        </div>

        <!-- FOOTER -->
        {{> footer}}


        <script src="js/perfil.js"></script>
</body>

</html>