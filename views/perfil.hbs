</head>

<body class="body">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="js/index.js"></script>
        

        <!-- HEADER -->
	{{> header}}
        {{> jumbotron}}


      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Perfil</li>
        </ol>
    </nav>

        <div class="container ">
                <h2>Mi perfil</h2>
                <div class="row">
                        <div class="col align-self-start"></div>

                        <div class="card col-sm-9 align-self-center" style="width: 45rem; opacity: 75%;
          ">
                                <img src="../img/nuevo sol 2.png" class="card-img-top" alt="">
                                <div class="card-body">
                                        <h5>Usuario: </h5>
                                        <h3 id="usuario" class="card-title">Usuario: </h3>
                                        <p class="card-text"></p>
                                </div>
                                <ul id="ulNoEditable" class="list-group list-group-flush">
                                        <label>Nombre completo: </label>
                                        <li class="list-group-item m-2" id="nombre" contenteditable="false"></li>
                                        <label>Edad: </label>
                                        <li class="list-group-item m-2" id="edad" contenteditable="false"></li>
                                        <label>Email: </label>
                                        <li class="list-group-item m-2" id="email" contenteditable="false"></li>
                                        <label>Dirección: </label>
                                        <li class="list-group-item m-2" id="direccion" contenteditable="false"></li>
                                        <label>Número de contacto: </label>
                                        <li class="list-group-item m-2" id="numContacto" contenteditable="false"></li>
                                        <div id="contr" style="display: none;">
                                                <label>Contraseña: </label>
                                                <li class="list-group-item m-2" id="contraseña" contenteditable="false">
                                                </li>
                                                <label>Confirmar contraseña: </label>
                                                <li class="list-group-item m-2" id="contraseña2"
                                                        contenteditable="false"></li>
                                        </div>
                                </ul>

                                <div class="card-body">
                                        <button id="modificarP" type="submit" onclick="modificar()"
                                                class="btn btn col-sm-4" style="background-color: rgb(57, 231, 243);">
                                                Modificar</button>
                                        <button id="bguardar" type="submit" onclick="guardarModificados()"
                                                class="btn btn col-sm-4"
                                                style=" display: none; background-color: rgb(89, 202, 255);">
                                                Guardar</button>

                                        <button id="EliminarP" type="submit" onclick="eliminarPerfil()"
                                                class="btn btn-dark col-sm-4">
                                                Eliminar
                                                perfil</button>

                                </div>
                        </div>

                        <div class="col align-self-end"> </div>
                </div>
        </div>


        <div id="slider-k">
                <div class="frame-k">
                        <img src="img/1.png" alt="" />
                </div>
                <div class="frame-k">
                        <img src="img/2.png" alt="" />
                </div>
                <div class="frame-k">
                        <img src="img/3.png" alt="" />
                </div>
                <div class="frame-k">
                        <img src="img/4.png" alt="" />
                </div>
                <div class="frame-k">
                        <img src="img/5.png" alt="" />
                </div>
        </div>


        <!-- FOOTER -->
	{{> footer}}


        <script src="js/perfil.js"></script>
</body>

</html>